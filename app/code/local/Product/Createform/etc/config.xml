                    </createform>
                </entities>
            </createform_mysql4>
        </models>
        <resources>
            <createform_setup>
                <setup>
                    <module>Product_Createform</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </createform_setup>
            <createform_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </createform_write>
            <createform_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </createform_read>
        </resources>
        <blocks>
            <createform>
                <class>Product_Createform_Block</class>
            </createform>
        </blocks>
        <helpers>
            <createform>
                <class>Product_Createform_Helper</class>
            </createform>
        </helpers>
