        <routers>
            <createform>
                <use>standard</use>
                <args>
                    <module>Product_Createform</module>
                    <frontName>createform</frontName>
                </args>
            </createform>
        </routers>
        <layout>
            <updates>
                <createform>
                    <file>createform.xml</file>
                </createform>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
			<createform>
				<use>admin</use>
				<args>
					<module>Product_Createform</module>
					<frontName>createform</frontName>
				</args>
			</createform>
        </routers>
    </admin>
